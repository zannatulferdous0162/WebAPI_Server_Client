@*@model IEnumerable<WorldCitiesAPIClientSite.Models.Country>*@

@model PagedList.IPagedList<WorldCitiesAPIClientSite.Models.Country>
@using PagedList;



@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Country", "Create")
</p>

@using (Html.BeginForm("Index", "Country", FormMethod.Get))
{<div class="d-flex align-items-center">
        <div>
            <b>Records per page:</b> @Html.TextBox("pageSize", ViewBag.CurrentPageSize as string)
            <input type="submit" value="Set" class="btn btn-primary btn-sm" />
        </div>
    </div>
}

<div>
    <table class="table">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                Country Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ISO2)*@
                ISO2
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ISO3)*@
                ISO3
            </th>
            <th>
                Action
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISO2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISO3)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

    @*<br />
    Page @(Model.PageCount<Model.PageNumber ? 0 :Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }),
        new PagedListRenderOptions
        {
            EllipsesFormat = "..."
        }
    )

    <style>
        .pagination a {
            margin: 0 5px;
        }
    </style>*@
</div>

